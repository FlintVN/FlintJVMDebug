{
    "name": "flintjvm-debugger",
    "displayName": "FlintJVM Debug",
    "description": "Debug java with FlintJVM",
    "version": "1.1.0",
    "icon": "images/icons/icon_flint_v1.png",
    "publisher": "ElectricThanhTung",
    "author": {
        "name": "ElectricThanhTung",
        "email": "electricthanhtung@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/FlintVN/FlintJVMDebug.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.81.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onDebugResolve:flint-debug",
        "onDebugDynamicConfigurations:flint-debug"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "breakpoints": [
            {
                "language": "java"
            }
        ],
        "debuggers": [
            {
                "type": "flint-debug",
                "languages": [
                    "java"
                ],
                "label": "Flint Debug",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "mainClass",
                            "classPath",
                            "sourcePath"
                        ],
                        "properties": {
                            "cwd": {
                                "type": "string",
                                "description": "The current working directory of the executed program",
                                "default": "Bin"
                            },
                            "install": {
                                "type": "boolean",
                                "description": "Allows installing classes on the target before executing",
                                "default": true
                            },
                            "mainClass": {
                                "type": "string",
                                "description": "The class name contains the main method",
                                "default": "main"
                            },
                            "classPath": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Path to java class files",
                                "default": "Bin"
                            },
                            "sourcePath": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Path to java source files",
                                "default": "Src"
                            },
                            "launchFlintJVMServerCommand": {
                                "type": "string",
                                "description": "Specifies Command will be executed to launch FlintJVMServer",
                                "default": false
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "flint-debug",
                        "request": "launch",
                        "name": "Flint Program",
                        "cwd": "Bin",
                        "install": false,
                        "mainClass": "main",
                        "classPath": ["Bin"],
                        "sourcePath": ["Src"],
                        "launchFlintJVMServerCommand": "FlintJVM -g"
                    }
                ],
                "configurationSnippets": [
                    {
                        "description": "A new configuration for 'debugging' FlintJVM on Windows OS",
                        "body": {
                            "type": "flint-debug",
                            "request": "launch",
                            "name": "Flint Windows Program",
                            "cwd": "Bin",
                            "install": false,
                            "mainClass": "main",
                            "classPath": ["Bin"],
                            "sourcePath": ["Src"],
                            "launchFlintJVMServerCommand": "FlintJVM -g"
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.81.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/debugadapter": "^1.56.0",
        "@vscode/debugadapter-testsupport": "^1.56.0",
        "@vscode/test-electron": "^2.3.2",
        "await-notify": "^1.0.1",
        "base64-js": "^1.5.1",
        "esbuild": "^0.14.29",
        "eslint": "^8.41.0",
        "events": "^3.3.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "path-browserify": "^1.0.1",
        "rimraf": "^3.0.2",
        "ts-loader": "^9.4.3",
        "typescript": "^5.5.4",
        "url": "^0.11.0",
        "vsce": "^2.7.0",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    }
}
