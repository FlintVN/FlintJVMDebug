{
    "name": "flintjvm-debugger",
    "displayName": "FlintJVM Debug",
    "description": "Debug java with FlintJVM",
    "version": "1.1.6",
    "icon": "images/icons/icon_flint_v1.png",
    "publisher": "ElectricThanhTung",
    "author": {
        "name": "ElectricThanhTung",
        "email": "electricthanhtung@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/FlintVN/FlintJVMDebug.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.81.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onDebugResolve:flint-debug",
        "onDebugDynamicConfigurations:flint-debug"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "breakpoints": [
            {
                "language": "java"
            }
        ],
        "debuggers": [
            {
                "type": "flint-debug",
                "languages": [
                    "java"
                ],
                "label": "Flint Debug",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "mainClass",
                            "classPath",
                            "sourcePath"
                        ],
                        "properties": {
                            "cwd": {
                                "type": "string",
                                "description": "The current working directory of the executed program",
                                "default": "bin"
                            },
                            "port": {
                                "type": "string",
                                "description": "Port to connect to flint server. The value can be a TCP/IP address or a COM port name",
                                "default": "127.0.0.1:9620"
                            },
                            "install": {
                                "type": "boolean",
                                "description": "Allows installing classes on the target before executing",
                                "default": true
                            },
                            "mainClass": {
                                "type": "string",
                                "description": "The class name contains the main method",
                                "default": "main"
                            },
                            "classPath": {
                                "anyOf": [
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    {
                                        "type": "string"
                                    }
                                ],
                                "description": "Path to java class files",
                                "default": "bin"
                            },
                            "sourcePath": {
                                "anyOf": [
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    {
                                        "type": "string"
                                    }
                                ],
                                "description": "Path to java source files",
                                "default": "src"
                            },
                            "modulePath": {
                                "anyOf": [
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    {
                                        "type": "string"
                                    }
                                ],
                                "description": "Path to java module files",
                                "default": "java.base.jar"
                            },
                            "launchFlintJVMServerCommand": {
                                "type": "string",
                                "description": "Specifies Command will be executed to launch FlintJVMServer",
                                "default": false
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "flint-debug",
                        "request": "launch",
                        "name": "Flint Program",
                        "cwd": "bin",
                        "install": false,
                        "mainClass": "main",
                        "classPath": [
                            "bin"
                        ],
                        "sourcePath": [
                            "src"
                        ],
                        "launchFlintJVMServerCommand": "FlintJVM -g"
                    }
                ],
                "configurationSnippets": [
                    {
                        "description": "A new configuration for 'debugging' FlintJVM on Windows OS",
                        "body": {
                            "type": "flint-debug",
                            "request": "launch",
                            "name": "Flint Windows Program",
                            "cwd": "bin",
                            "port": "127.0.0.1:9620",
                            "install": false,
                            "mainClass": "main",
                            "classPath": [
                                "bin"
                            ],
                            "sourcePath": [
                                "src"
                            ],
                            "launchFlintJVMServerCommand": "FlintJVM -g"
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.5.7",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.81.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/debugadapter-testsupport": "^1.56.0",
        "@vscode/test-electron": "^2.3.2",
        "electron": "^25.0.1",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "@vscode/debugadapter": "^1.56.0",
        "adm-zip": "^0.5.16",
        "serialport": "^11.0.1"
    }
}
